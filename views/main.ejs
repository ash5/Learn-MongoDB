<html>
	<head>
		<title>TestPage</title>
	
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css">
		
	</head>
	
	<body>
	<div class="container">
	
	<h1><strong>Learn-MongoDB</strong></h1>
		
		<!-- 選択プルダウン　-->
		
		<select id="sel_question" name="sel_question">
			<option value="" selected>SELECT</option>
			<option value="tutorial">Tutorial</option>
			<option value="operator">Operator</option>
			<option value="order">注文</option>
			<option value="grade">成績表</option>
			<option value="blog">ブログ</option>
		</select>
		
		<input type="hidden" id="q_num" name="q_num" value="0">
		
		<!-- 問題表示フィールド -->
		<div class="row">
			<div class="col-lg-8 col-md-8 col-sm-8">
			   <div id="mondai"></div>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4">
			 <br><br>
				<div id='key'></div>
				
				<div id='value'></div>
			</div>
		</div>	
	    <br>
	    <div class="row">
			<div class="col-lg-8 col-md-8">
				<div id='q_r'></div>
			</div>
		</div>
				<br>
			   <div id="button"></div>
			<br>
		<hr>
		<br>
		
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6">
			<!-- JSON入力フィールド -->
			<form action="/answer" method="post" target="comment" onsubmit="return chkForm(this)" name="form">
				<fieldset>
					
					<!--　問題番号等 -->
					<input type="hidden" id="q_id" name="q_id" value="0">
					<input type="hidden" id="q_result" name="q_result" value="">		
					<input type="hidden" id="q_feedback" name="q_feedback" value="0">
					<div id="q_query"></div>
				  
					<p><label>Input DataModel</label></p>
					<!-- コレクション名 -->
						<input type="button" value="add collection" id="btn_c_add" class="btn-default btn-sm">
						<br> 
						<ul style="list-style:none;" id="collection_list"  >
							<li>
						
				   				<input type="text" id="collection_list_0" name="collection_list_0" placeholder="Collection Name" class="form-control" style="font-weight:bold">
				   			
				   			</li> 		
				   		 	<li><br>		  
							
								<input type="button" value="add document" id="btn_d_0" class="btn_d_add btn-default btn-sm"><br>
								<ul style="list-style:none;" id="document_0" class="document_list">
									<li><textarea cols="40" rows="3"  id="document_0_0" name="document_0_0" placeholder="Document" class="form-control" style="font-weight:bold"></textarea></li>
								</ul>
							</li>
						</ul>
					<!-- 解答送信ボタン -->
					  <!-- <input type="submit" value="Submit">  --> 
				<button type="submit"  class="btn-primary btn-lg ">
				<span class="glyphicon glyphicon-ok"></span> Submit</button> 
					
				</fieldset>
			</form>
		</div>


		<div class="col-lg-6 col-md-6 col-sm-6">
			<!-- ヒント表示　ボタン -->
				<!--  
				<input id="test_button" type="button" value="Test" class="btn-info btn-lg">
				-->
				<button type="button" id="test_button" class="btn-info btn-lg">
				<span class="glyphicon glyphicon-comment"></span> Hint</button>
				<br><br>				
			<!-- ヒント表示フィールド -->
				<div id="hint"></div>
		</div>	
    </div><!-- row END -->
		<br>
		<hr>
		<br>
		
		<!--　フィードバックフィールド -->
			<!-- クライアント側 -->
			<div id = "error"></div>
			<!-- サーバー側 -->
			<iframe id="comment" name="comment" src="/comment" width="600" height="150" scrolling="auto" frameborder="0" >
			</iframe>
				

			
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
	<script src="/javascripts/jquery.js"></script>
	
	
	</div><!-- containerEND -->
	
	</body>
</html>
