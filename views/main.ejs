<!-- JSON入力フィールド -->
<form method="POST" action="/debug" target="comment">
	<fieldset>
		
		<!--　問題番号等 -->
		<input type="hidden" id="q_id" name="q_id" value="0">
		<input type="hidden" id="q_result" name="q_result" value="">		
		<input type="hidden" id="q_feedback" name="q_feedback" value="0">
		<div id="q_query"></div>
	  
		<p><label>Input JSON</label></p>
		<!-- コレクション名 -->
		<label for="collection_name">コレクション</label>
			<input type="button" value="add collection" id="btn_c_add">
			<br> 
			<ul style="list-style:none;" id="collection_list" >
				<li>
	   				<input type="text" id="collection_list_0" name="collection_list_0">
	   			</li> 		
	   		 	<li><br>		  
					ドキュメント
					<input type="button" value="add document" id="btn_d_0" class="btn_d_add"><br>
