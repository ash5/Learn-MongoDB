						<li><textarea cols="40" rows="4"  name="document_0_0"></textarea></li>
					</ul>
				</li>
			</ul>
		<!-- 解答送信ボタン -->
		<input type="submit" value="Submit">
	</fieldset>
</form>

<br>
<hr>
<br>


<!-- ヒント表示　ボタン -->
